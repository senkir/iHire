<div id="searchBar">
  
<% semantic_form_for :position, :method  => 'get'  do |search_form|%>
  <% search_form.inputs do %>
    <%= search_form.input :title %>
    <%= search_form.input :location, :collection => Position.find(:all, :select => "DISTINCT(location)").map(&:location) %>
    <%= search_form.input :department, :collection => Position.find(:all, :select => "DISTINCT(department)").map(&:department) %>
<% end %>
  <%= search_form.buttons :commit %>  
<% end %>