<%= render :partial => "search_form" %>
</div>
<div id="results">
  select * from positions where <%= query_for_search @query %><br />
<% if @query %>
  <% @results = results_for_query(@query) %>
  <% if @results.count > 0 %>
    found <%= @results.count %> results!
    <% @results.each do |result| %>
      result: <%= result.title %>
    <% end %>
  <% else %>
  no results for query.
  <% end %>
<% else %>
<p>no search entered yet.</p>
<% end %>
</div>
  <p><%= link_to "All Open Positions", positions_search_results_path %></p>